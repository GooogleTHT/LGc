<Page x:Class="LegendaryClient.Windows.MasteriesOverlay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      Title="MasteriesOverlay"
      mc:Ignorable="d" d:DesignHeight="768"
      d:DesignWidth="1280">

    <Grid Background="#B2000000">
        <Grid Margin="20,50,20,50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FF2B2B2B" Opacity="0.85">
            <Button x:Name="CloseButton" Width="30" Height="30" Margin="0,5,5,0" HorizontalAlignment="Right" VerticalAlignment="Top" Content="X" Click="CloseButton_Click" />
            <ContentControl x:Name="Container" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </Grid>
    </Grid>
</Page>